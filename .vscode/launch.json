{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}\\C:\\Users\\hp OMEN\\AppData\\Local\\Programs\\Python\\Python311\\Lib\\site-packages"
            }
        },
        {
            "name": "Python: pytest",
            "type": "debugpy",
            "request": "launch",
            "program": "c:/python313/scripts/pytest.exe",
            "args": [
            "${fileDirname}"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "C/C++: g++.exe",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "${env:MSYS_GDB_PATH}",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++.exe build active file"
        },
        {
            "name": "HTML: Open in Brave",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/live-server",
            "args": [
                "--browser=brave",
                "--port=5500",
                "--entry-file=${file}"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "HTML: Launch in Brave (Direct)",
            "type": "chrome",
            "request": "launch",
            "file": "${file}",
            "runtimeExecutable": "C:\\Program Files\\BraveSoftware\\Brave-Browser\\Application\\Brave.exe",
            "webRoot": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "Python and C/C++",
            "configurations": [
                "Python: Current File",
                "C/C++: g++.exe"
            ]
        }
    ],
    "terminal.external.windowsExec": "${env:SystemRoot}\\System32\\cmd.exe"
}